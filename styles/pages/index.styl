.section
  margin-bottom 8rem
  & + .pagination
    margin-top -4rem
  &_small-offset
    margin-bottom 9.6rem

hr,
.hr
  background-color transparent
  border none
  height 1px
  border-top $border
  margin 3.2rem 0
  width 100%


.heading
  align-items center
  display flex
  flex-direction column
  // justify-content center
  text-align center
  h2, h3, p
    max-width 60rem
  &_small
    h2, h3
      color $gray
      font-size 1.8rem
      font-weight 500
      letter-spacing 0

.date
  color $gray
  font-size 1.4rem

.slider-persons
  .swiper-slide
    display flex
    justify-content center

.downloads
  display flex
  .download
    transition $transition
    &:hover
      filter grayscale(1) contrast(2) invert(1)
      opacity .2
    &:not(:last-child)
      margin-right .8rem


.person
  max-width 30rem
  text-align center
  &__img
    margin-bottom 2.4rem
    img
      display inline-block
  &__name
    font-size 2rem
    font-weight 700
    margin-bottom .4em
  &__status
    color $gray
    font-weight 500
    line-height 1.2









