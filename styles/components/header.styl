.header
  left 0
  // position sticky
  position fixed
  top 0
  // transition $transition
  transition background-color .4s $bezier
  width 100%
  z-index 100
  &__container
    align-items center
    border-bottom 1px solid rgba(#fff, .2)
    display flex
    justify-content space-between
    transition $transition2
  &__left
    align-items center
    display flex
  &__right
    align-items center
    display flex
    justify-content flex-end
  .logo
    flex-shrink 0
    max-width 20rem
    margin-right 2.4em
    img
      filter brightness(0) invert(1)
      transition $transition
  &_scroll,
  &_mobile-menu-open
    background-color rgba(#fff, .8)
    backdrop-filter saturate(180%) blur(12px)
    .logo
      img
        filter initial
    .nav
      &__link
        a
          color $main
          &:hover
            color $primary
    .burger
      &:before,
      &:after
        background-color $main
  &_mobile-menu-open
    .header
      &__container
        border-bottom $border


.nav
  display flex
  // margin-right 2em
  &__link
    margin-right 1.5em
    position relative
    transition $transition
    a
      color #fff
      display flex
      font-size 1.6rem
      font-weight 500
      padding 2.4rem 0
      linkHover($primary)
      &:hover
        color #fff
        &:before
          background-color $primary
      // position relative


.burger
  display none
  margin-left 3.2rem
  position relative
  transition $transition
  transform translateY(-4px)
  width 3.2rem
  &:before,
  &:after
    background-color #fff
    content ''
    height 2px
    position absolute
    top 0
    transition all .3s ease
    width 3.2rem
  &:after
    top 8px
  &_active
    transform translate(8px, -4px)
    &:before
      transform rotate(45deg) translateY(6px)
      width 2.4rem
    &:after
      transform rotate(-45deg) translateY(-6px)
      width 2.4rem

.mobile-menu
  background-color #fff
  left 0
  display none
  position fixed
  size(100%)
  top 0
  z-index 100
  &__container
    padding 7.2rem 2.4rem
  &__nav
    margin-bottom 1.2em
  &__link
    // color #fff
    font-size 1.8rem
    font-weight 600
    margin-bottom .7em
    opacity 0
    transition $transition2
    transform translateY(-2rem)
    for num in (1..12)
      &:nth-child({num})
        transition-delay (num / 30) s
    &_big
      font-size 3.2rem
      font-weight 700
      margin-bottom .4em
    &-section
      display flex
      justify-content space-between
      width 100%
    &-container
      display none
      margin-bottom .5em
      margin-top .5em
  &-accordion
    position relative
    .mobile-menu__link_big
      display inline-block
      // position relative
      &:after
        content url('/assets/img/mobile-accordion.svg')
        display inline-block
        transform translateY(5px)
        transition $transition
      &_active
        &:after
          transform rotate(180deg)
  &__phone-container
    align-items center
    display flex
    margin-bottom 2rem
  &_active
    .logo
      svg
        #logo-mediaheads
          fill #fff
        #logo-sub
          fill #fff
    .mobile-menu
      &__link
        opacity 1
        transform none



@keyframes logoHoverAnimation
  0%
    opacity 0
  100%
    opacity 1


