.tabs
  &__header
    // border-bottom $border
    display flex
    justify-content center
    margin-bottom 4rem
    position relative
  &__links
    border-bottom $border
  &__link
    align-items center
    cursor pointer
    display flex
    justify-content center
    padding 1em 0
    padding-top 0
    position relative
    text-align center
    linkHover($primary)
    &:before
      background-color $primary
    &_active
      color $primary
      &:before
        width 100%
    &:not(:last-child)
      margin-right 2em

  &__content
    display none
    img
      max-width 100%
    &_active
      animation tabs .3s ease
      display block

@keyframes tabs
  from
    opacity 0
    transform translateY(.5rem)
  to
    opacity 1
    transform none


