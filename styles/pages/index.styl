.section
  margin-bottom 8rem
  & + .pagination
    margin-top -4rem
  &_small-offset
    margin-bottom 9.6rem

hr,
.hr
  background-color transparent
  border none
  height 1px
  border-top $border
  margin 3.2rem 0
  width 100%


.heading
  align-items center
  display flex
  flex-direction column
  // justify-content center
  text-align center
  h2, h3, p
    max-width 60rem
  &_small
    h2, h3
      color $gray
      font-size 1.8rem
      font-weight 500
      letter-spacing 0

.date
  color $gray
  font-size 1.4rem

.slider-persons
  .swiper-slide
    display flex
    justify-content center

.downloads
  display flex
  .download
    transition $transition
    &:hover
      filter grayscale(1) contrast(2) invert(1)
      opacity .2
    &:not(:last-child)
      margin-right .8rem
    img
      max-width 100%
  &_black
    .download
      img
        filter grayscale(1) contrast(2)
      &:hover
        opacity 1


.person
  max-width 30rem
  text-align center
  &__img
    margin-bottom 2.4rem
    img
      display inline-block
  &__name
    font-size 2rem
    font-weight 700
    margin-bottom .4em
  &__status
    color $gray
    font-weight 500
    line-height 1.2


.more-container
  display flex
  justify-content center

.more
  align-items center
  display flex
  flex-direction column
  &__icon
    margin-bottom 1rem
    position relative
    &:before
      background-color $primary
      content ''
      center()
      height 2px
      transition transform $bezier .6s .1s
      width 12px
    &:after
      background-color $primary
      content ''
      center()
      height 12px
      transition transform $bezier .6s .1s
      width 2px
  &__text
    color $primary
    font-size 1.2rem
    font-weight 800
    letter-spacing .5px
    text-transform uppercase
  #more-circle
    stroke-dasharray 250
    stroke-dashoffset 250
    transition $transition3
  &:hover
    #more-circle
      stroke-dashoffset 0
    .more
      &__icon
        &:before,
        &:after
          transform rotate(180deg)
      &__text
        color $main
    // #more-cross
    //   transform rotate(180deg)


.icon
  margin-bottom 2.4rem

