.swiper
  &-wrapper
    transition-timing-function cubic-bezier(.16,1.08,.38,.98)
  &-pagination
    // margin-top 4rem
    margin-bottom 4rem
    position initial
    transform translateY(4rem)
    &-bullet
      background-color #ddd
      opacity 1
      &-active
        background-color $primary
  &-button-prev,
  &-button-next
    bottom 0
    justify-content center
    margin-top 0
    margin auto
    top 0
    circleHover(6.4rem, #eee)
    &:before
      font-family $font
      font-size 0
    &:after
      background-color $primary
    img
      transition $transition
    &:hover
      img
        filter invert(100%)
  &-button-prev
    left 2.4rem
    // &:before
    //   content url('../../img/arrow-left.svg')
  &-button-next
    right 2.4rem
    // &:before
    //   content url('../../img/arrow-right.svg')
  &-slide
    opacity 0
    transform translateX(8rem)
    transition transform 2s cubic-bezier(.16,1.08,.38,.98), opacity 2s cubic-bezier(.16,1.08,.38,.98)
    for num in 1..6
      &:nth-child({num})
        transition-delay (num/10) s
  &-container.animated
    .swiper
      &-slide
        opacity 1
        transform none



@media(max-width 1200px)
  .swiper
    &-buttons
      display none